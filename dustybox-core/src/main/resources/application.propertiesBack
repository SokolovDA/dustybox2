# === Dustybox Core Configuration ===

# Application
spring.application.name=dustybox-core
server.port=8080

spring.mvc.pathmatch.matching-strategy=ANT_PATH_MATCHER

# Database Configuration
spring.datasource.url=jdbc:postgresql://ubus:5432/dustybox
spring.datasource.username=dustyman
spring.datasource.password=q
spring.datasource.driver-class-name=org.postgresql.Driver
spring.datasource.hikari.connection-timeout=30000
spring.datasource.hikari.maximum-pool-size=10

# Hibernate Configuration
spring.jpa.hibernate.ddl-auto=none
spring.jpa.show-sql=true
# Hibernate Logging
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.hibernate.type.descriptor.sql=trace
logging.level.org.hibernate.stat=debug
logging.level.org.hibernate.orm.jdbc.bind=trace

# Plugin Configuration
dustybox.plugins.dir=./plugins
dustybox.plugins.auto-start=true

# Swagger Configuration
springdoc.api-docs.enabled=true
springdoc.swagger-ui.enabled=true
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.try-it-out-enabled=true
springdoc.swagger-ui.filter=true
springdoc.api-docs.path=/api-docs
# springdoc.packages-to-scan=com.dustymotors.core.web,com.dustymotors.plugins
springdoc.packages-to-scan=com.dustymotors.core.web
springdoc.default-consumes-media-type=application/json
springdoc.default-produces-media-type=application/json
springdoc.show-actuator=true

# Scripts Configuration
dustybox.scripts.base-dir=./scripts
dustybox.scripts.execution-timeout=30
dustybox.scripts.cache-enabled=true

# Thymeleaf
spring.thymeleaf.cache=false
spring.thymeleaf.prefix=classpath:/templates/
spring.thymeleaf.suffix=.html
spring.thymeleaf.mode=HTML
spring.thymeleaf.encoding=UTF-8
spring.thymeleaf.servlet.content-type=text/html

# Logging
logging.level.com.dustymotors=DEBUG
logging.level.org.springframework.jdbc=DEBUG
logging.file.name=logs/dustybox.log

# Additional setup for Spring Boot 4.x
spring.main.allow-circular-references=true
spring.jpa.open-in-view=false

# TEMP! For debug
logging.level.org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping=trace
logging.level.org.springframework.web.servlet.handler.SimpleUrlHandlerMapping=debug